---
import type { HTMLTag } from 'astro/types'
import Line from './shapes/Line.astro'

export interface Props {
  as: HTMLTag
  class?: string
}

const { as: Element, class: className } = Astro.props
---

<Element class:list={['line', className]}>
  <slot />
  <Line />
</Element>

<style lang="sass">
  .line
    position: relative

  svg
    position: absolute
    bottom: -8px
    left: 0
    width: 165px
</style>
