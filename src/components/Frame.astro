---
import Frame01 from './shapes/Frame_01.astro'
import Frame02 from './shapes/Frame_02.astro'

type Variant = 'primary' | 'secondary'

export interface Props {
  variant: Variant
  as: string
  class?: string
}
const { variant, as: Element, class: className } = Astro.props

const frames = {
  primary: Frame01,
  secondary: Frame02,
}

const FrameElement = frames[variant]
---

<Element class:list={['.frame', className]}>
  <span>
    <FrameElement />
  </span>
  <slot />
</Element>

<style lang="sass">
  .frame
    position: relative
    width: fit-content

  span :global(svg)
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 100%
    height: 100%
</style>
